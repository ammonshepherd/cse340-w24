<div class="card login">

<%- messages() %>

<% if (errors) { %>
    <% errors.array().forEach(error => { %>
    <p class="alert error"><%= error.msg %></p>
<%  }) %>
<% } %>

<h1><%- title %></h1>
<form action="/account/login" method="post">
    <label for="email">
    <input type="email" id="email" name="account_email" placeholder="Email Address" value="<%= locals.account_email %>" required>
    </label>
    <label for="password">
    <span class="login_pass_note">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <input type="password" id="password" name="account_password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    </label>
    <input class="login_submit" type="submit" value="Login">
</form>

<p class="create_account">Not a member? <a href="/account/registration">Create account</a></p>
</div>